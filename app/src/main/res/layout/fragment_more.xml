<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_title"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_regist"
                android:text="用户注册"
                android:drawableLeft="@drawable/icon_more_regist"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/divider_line"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="手势密码"
                    android:drawableLeft="@drawable/icon_more_secret"
                    android:layout_width="wrap_content"
                    style="@style/MoreTextStyle" />

                <ToggleButton
                    android:id="@+id/toggle"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_selector"
                    android:textOn=""
                    android:textOff=""
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>

            <TextView
                android:id="@+id/tv_reset_gesture"
                android:text="重置手势密码"
                android:drawableLeft="@drawable/icon_more_reset"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/divider_line"></View>

            <RelativeLayout
                android:id="@+id/rl_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="联系客服"
                    android:drawableLeft="@drawable/icon_more_contact"
                    android:layout_width="wrap_content"
                    style="@style/MoreTextStyle" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15622732935"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>
            <TextView
                android:id="@+id/tv_fk"
                android:text="用户反馈"
                android:drawableLeft="@drawable/icon_more_sms"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/divider_line"></View>

            <TextView
                android:id="@+id/tv_share"
                android:text="分享给好友"
                android:drawableLeft="@drawable/icon_more_share"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/divider_line"></View>

            <TextView
                android:id="@+id/tv_about"
                android:text="关于RookieLjr理财"
                android:drawableLeft="@drawable/icon_more_about"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divider_line"></View>

        </LinearLayout>


</LinearLayout>